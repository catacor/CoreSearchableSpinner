<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#999999"
        app:layout_constraintBottom_toTopOf="@+id/my_spinner"
        app:layout_constraintTop_toTopOf="parent" />

    <com.catacore.coresearchablespinner.CoreSearchableSpinner
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/my_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:displayEmptyText="false"
        app:displayDropdownRightIcon="false"
        app:displaySearchRightIcon="false"
        app:displayResultTextOnSelect="false"
        android:layout_marginTop="400dp"
        app:topBottomTextPadding="30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#666666"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>