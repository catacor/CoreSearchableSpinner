<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/spinner_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:drawablePadding="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/custom_edit_text_bg_empty">


        <com.catacore.coresearchablespinner.ExtendedEditText
            android:visibility="gone"
            android:id="@+id/spinner_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/spinner_display_icon"
            android:textColor="#333"
            android:textSize="18sp"
            android:maxLines="1"
            android:background="@android:color/transparent"
            android:text=""/>


        <TextView
            android:visibility="visible"
            android:id="@+id/spinner_display_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/spinner_display_icon"
            android:drawablePadding="20dp"
            android:ellipsize="end"
            android:gravity="center_vertical|center_horizontal"
            android:maxLines="1"
            android:text="TEST"
            android:textColor="#333"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/spinner_display_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_loupe"/>

    </RelativeLayout>

</merge>